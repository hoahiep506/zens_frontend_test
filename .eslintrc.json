{
  "parserOptions": {
    "ecmaVersion": 6,
    "project": [
      "tsconfig.json"
    ]
  },
  "env": {
    "browser": true
  },
  "extends": [
    "airbnb-typescript",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": "off",
    "comma-dangle": "off",
    "@typescript-eslint/comma-dangle": "off",
    "import/no-unresolved": "off",
    "import/named": "off"
  }
}